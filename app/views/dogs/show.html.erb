<div>
  <div class="container">

    <div class="row justify-content-center">

      <div class="col-4">

        <h1 id="h1ofshow"><%= @dog.name %> </h1>

        <p id="pofshow"> Location: <%= @dog.location %> </p>
        <%= cl_image_tag @dog.photo, width: 400, height: 300, crop: :fill%>

        <%= link_to "ALL doggos", dogs_path, class:"btn btn-success" %>

        <h3>Request to walk <%= @dog.name %></h3>


        <%= simple_form_for([@dog, @appointment]) do |f| %>
        <%= f.input :request_message %>
        <%= f.input :date %>
        <%= f.input :time_start, label: 'Pickup' %>
        <%= f.input :time_end, label: 'Dropoff' %>
        <%= f.button :submit, class: "btn btn-lg btn-success" %>
       
        <% end %>
        
     
      </div>
    
    </div>
 
  </div>
 
  
</div> 
