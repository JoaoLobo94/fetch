<div class="background">
  <div class="padding-top-container">
    <div class="container">
      <div class="everything-flex sm-flex-col">
        <div class="dog-information">
          <p><%= cl_image_tag @dog.photo, width: 350, height: 300, crop: :fill, class: 'image-border-radius'%></p>
          <h1 id="h1ofshow"><%= @dog.name %> </h1>
          <p><strong>Location: </strong><%= @dog.location %></p>
          <p><strong>Breed:</strong> <%= @dog.breed %></p>
          <p><strong>Gender: </strong> <%= @dog.gender %></p>
          <p><strong>Age: </strong> <%= @dog.age %></p>
          <p><strong>Description: </strong> <%= @dog.description %></p>
        </div>
        <div class="thin-line"></div>
        <div class="form-css">
          <h3>Ask to walk <%= @dog.name %></h3>
          <%= simple_form_for([@dog, @appointment]) do |f| %>
          <div class="margin-between-elements">
            <%= f.input :request_message%>
          </div>
          <div class="margin-between-elements">
            <%= f.input :date, as: :string, input_html: {class: "datepicker"} %>
          </div>
          <div class="margin-between-elements">
            <%= f.input :time_start, label: 'Pickup'%>
          </div>
          <div class="margin-between-elements">
            <%= f.input :time_end, label: 'Dropoff'%>
          </div>
          <div class="btn-center margin-between-elements">
            <%= f.button :submit, "Request a walk", class: "btn btn-lg button-color"%>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
