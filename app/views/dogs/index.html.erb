<div class="dog-index-container">

  <div class="dog-index-content">
    <h1>dog index content</h1>


    <div class="page-title">
      <h1> Browse your new doggo friend </h1>
    </div>

    <div class="d-flex justify-content-center">
      <%= form_tag dogs_path, method: :get do %>
      <%= text_field_tag :query,
      params[:query],
      class: "form-control search-bar",
        placeholder: "Find a dog by location"
        %>
    </div>
      <% end %>

    <div class="dog-index-card-grid">
      <%  @dogs.each do |dog|  %>
      <div class="card card-margin-border-radius">
        <img src='<%= dog.photo %>', class="card-photo" />
        <div class="card-body">
          <h5 class="card-title"><%= dog.name %></h5>
          <p class="card-text"><%= dog.location %></p>
          <p class="card-text"> <%= dog.description %> </p>
          <%= link_to "Details", dog_path(dog), class: "btn btn-flat"%>
        </div>
      </div>
      <% end %>
    </div>
  </div>

  <div class="dog-index-map-container">
    <h1>dog index map container</h1>
    <div
    class="dog-index-map"
    id="map"
    style="width: 100%;
    height: 100vh;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
    ></div>
  </div>

</div>
