<div class="container justify-content-center color" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= image_path "new-dog.jpeg" %>');">

  <div class="row justify-content-center">

    <div class="col-4">

      <h1>Add your doggo!</h1>

      <%= simple_form_for @dog do |f| %>
      <%= f.input :name %>
      <%= f.input :breed %>
      <%= f.input :gender, collection: ["Male", "Female", "Unspecified"]%>
      <%= f.input :age %>
      <%= f.input :description %>
      <%= f.input :location %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
      <%= f.button :submit, class: "btn btn-lg btn-outline-primary" %>

      <% end %>

    </div>

  </div>

</div>
