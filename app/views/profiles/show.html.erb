<h1> <%= @user.first_name %>'s Profile </h1>

<% @user.dogs.each do |dog| %>
  <%= cl_image_tag dog.photo, width: 400, height: 300, crop: :fill %>
<% end %>

<h2>Requests to book my dog(s)</h2>

<% @appointments.each do |appointment| %>

<div class="appointment-card">

  <h4><%= appointment.user.first_name %> wants to walk <%= appointment.dog.name %></h4>

  <p><%= appointment.date %></p>

  <p><%= appointment.time_start %></p>

  <p><%= appointment.time_end %></p>

  <p>Status: <%= appointment.status %></p>

  <%= link_to "Accept", accept_appointment_path(appointment), method: :patch %>

  <%= link_to "Reject", deny_appointment_path(appointment), method: :patch %>

</div>

<% end %>
